---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<script>
  const COLORS = ["#0bf", "#f0b", "#fb0", "#b0f"];

  const getRandomColor = (): string =>
    COLORS[Math.floor(Math.random() * COLORS.length)];

  const colorizeText = (): void => {
    const colorfulText = document.querySelector(".colorful");
    if (!colorfulText) return;

    const text = colorfulText.textContent;
    if (!text) return;

    const coloredText = text
      .split("")
      .map((char) => `<span style="color: ${getRandomColor()}">${char}</span>`)
      .join("");

    colorfulText.innerHTML = coloredText;
  };

  colorizeText();
</script>

<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main>
      <h1>üßë‚ÄçüöÄ Hi again!</h1>
      <p>Why again?</p>
      <p>
        Because this is my <i>some_humorous_number</i> attempt at building a blog.
      </p>
      <p>
        I'm Dave, a Software Engineer that has gone off the deep end with AWS,
        cloud, and security. Sometimes you will see me in the arcades of various
        Tokyo districts, stomping away at <span class="colorful"
          >flying colored arrows</span
        >
        (Dance Dance Revolution reference), or pondering my life decisions as I try
        to make sense of Jenkins.
      </p>
    </main>
    <Footer />
  </body>
</html>
